.container {
  background-color: #eee;
  padding-bottom: 60px;
}

.user-top {
  height: 200px;
  background-color: #fc4768;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #fff;
  font-size: 14px;
  padding: 10px 15px;
}
.middle {
  color: #444;
  background-color: #fff;
  padding: 6px 10px;
  margin:14px 0 10px 0;
}

.bottom {
  color: #444;
  background-color: #fff;
  padding: 6px 10px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 0 auto 10px auto;
}
.uname {
  font-weight: bold;
  margin-bottom: 10px;
}
.info {
  font-size: 12px;
  color: #fff;
}

.weui-panel {
    width:100%
}

.my-view-info {
  display: flex;
  flex-flow: row nowrap;
  height: 40px;
  justify-content: space-between;
  padding: 6px 10px;
  border-bottom: 1px solid #eee;
  align-items: center;
}

.my-txt-desc {
  font-size: 14px;  
}

.my-icon {
  color: #444;
  font-size: 14px;
}

.border-none {
  border: none;
}
