/* pages/social/social.wxss */
.container {
  box-sizing: border-box;  
}
.social-publish-view {
  width: 100%;
  height: 50px;
}
.btn-container {
  height: 46px;
  width: 100%;
  display: flex;
  align-items: center;
  border-top: 1px solid #eee;
  background-color: #fff;
}
.social-publish-content {
  width: 100%;
  display: flex;
  justify-content: center;
}
.social-publish-div {
  color: #888;
  font-size: 16px;
  line-height: 16px;
  flex-flow: row nowrap;
  display: flex;
  justify-content: center;
}
.social-publish-icon {
  margin-right: 10px;
}