/* pages/social/topic/topic.wxss */
.top {
  padding: 18px 12px 6px 12px;
  border-bottom: 1px solid #eee;
}
.title {
  font-size: 18px;
}
.desc {
  color: #444;
  font-size: 16px;
  padding: 4px 0 6px 0;
}
.image-list {
  display: flex;
  flex-flow:row nowrap;
}
.image-list-item {
  margin-right: 10px;
}
.image-item {
  width: 60px;
  height: 80px;
}
.topic-publish {
  width: 100%;
  height: 40px;
}
.publish-info-auther {
  color: #707885;
}
.publish-info-date {
  color: #888;
}
.btn-container {
  width: 100%;
  height: 40px;
  border-top:1px solid #eee;
  background-color: #fff;
}
.input-topic {
  height: 40px;
  padding-left: 6px;
  font-style: oblique;
  font-size: 16px;
  box-sizing: border-box;
}
.look-comment-count {
  display: flex;
  flex: row nowrap;
  color: #888;
}
.publish-info {
  font-size: 14px;
  padding: 6px 0 10px 0;
}
.other-info {
  display: flex;
  flex: row nowrap;
  border-top: 1px solid #eee;
  justify-content: space-between;
  font-size: 14px;
  padding: 10px 0 6px 0;
  color: #888;
}
.look-count {
  margin-right: 10px;
}
.interval {
  height: 10px;
  width: 100%;
  background-color: #eee;
  box-sizing: border-box;
}