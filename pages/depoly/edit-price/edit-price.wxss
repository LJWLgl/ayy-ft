/* pages/depoly/edit-price/edit-price.wxss */

.form-price {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.item {
  display: flex;
  flex-flow: row nowrap;
  height: 60px;
  border-bottom: 1px solid #eee;
}
.item-desc {
  flex: 3;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: #444;
  font-size: 14px;
  position: relative;
}

.item-edit {
  flex: 7;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: #444;
}
.input-freight-view {
  display: flex;
}
.input {
  width: 100%;
}
.freight-value {
  flex: 1;
}
.freight-slider {
  flex: 7;
}

.money-logo::after {
  content: "ï¿¥";
  color: #888;
  font-weight: lighter;
  position: absolute;
  right: 2px;
}
.btn-edit {
  width: 80%;
  height: 40px;
  background-color: red;
  display: flex;
  justify-content: center;
  line-height: 40px;
  font-size: 16px;
  color: #fff;
  border-radius: 5px;
}
.middle {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
