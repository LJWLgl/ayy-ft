/**index.wxss**/

text {
  word-break: break-all; 
}

.main {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
}

.image-container {
  background-color: #f2f2f2
}

.data {
  margin: 5px;
}

.image-list {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
}

.image {
  width: 40px;
  height: 40px;
}

image-box {
  width: 42px;
  height: 42px;
  border: 2px solid #000;
}