.image-list {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 10px 10px;
}
.container {
  box-sizing: border-box;
  overflow-x: hidden;
}
.top {
  padding-top:10px; 
  box-sizing:border-box;
}
.title {
  border-bottom: 1px solid #eee;
  font-size: 16px;
  color: #444;
  padding: 4px 0;
}
.desc {
  font-size: 14px;
  color: #444;
  padding: 4px 0;
}
.input-area {
  width: 100%;
  padding: 10px;
}

.image {
  width: 80px;
  height: 80px;
}

.image-box {
  width: 82px;
  height: 82px;
  margin-right: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.base-info {
  padding: 0 6px;
}

.image-box-add {
  width: 82px;
  height: 82px;
  display: flex;
  justify-content: center;
  align-items: center;
  border:1px solid #eee;
}
.location {
  width: 100%
}

.location-info {
  height: 32px;
  padding: 4px 16px;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.txt-address {
  height: 18px;
  font-size: 12px;
  color: #888;
}

.middle-icon {
  color: #888;
  font-size: 16px;
}

.form-list {
  padding: 2px 10px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #444;
}
.list-item {
  padding: 10px 0;
  border-bottom: 1px solid #eee;
  color: #444;
  font-size: 16px;
}

.hide {
  display: none;
}
.scoller {
  box-sizing: border-box;
  padding-bottom: 100px;
  width: 100%;
}
.fixed {
  position: relative;
  width: 100%;
}
.fixed-container {
  position: fixed;
  padding: 5px 0;
  bottom: 0;
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.btn-publish {
  width: 94%;
  height: 50px;
  background-color: red;
  display: flex;
  justify-content: center;
  color: #fff;
  border-radius: 5px;
}
.price-edit {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 10px;
}
.price-edit-item {
  color: #888;
  font-size: 12px;
}
.txt-publish {
  line-height: 50px;
}

