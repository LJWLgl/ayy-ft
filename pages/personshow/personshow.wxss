/* pages/personshow/personshow.wxss */
.user-top {
  height: 240px;
  width: 100%;
  background-color: #fc4768;
  display: flex;
  flex-direction: column;
  text-align: center;
  box-sizing: border-box;
  color: #fff;
  font-size: 14px;
  padding: 10px 15px;
}
.auth-medal {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}
.auth {
  margin-right: 50px;
}
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 0 auto 10px auto;
}
.uname {
  font-weight: bold;
  margin-bottom: 10px;
}
.info {
  font-size: 12px;
  color: #fff;
}
.img-medal {
  width: 20px;
  height: 20px;
}
.tab-title{
  width:100%;
  height: 50px;
  line-height:50px;
  display:flex;
  flex-direction: row;
  color: #888;
  font-size: 16px;
}
.tab-title view{
  flex:auto;
  text-align:center;
}
.border-tottom{
  border-bottom:1rpx solid red;
}
.show{display:block;}
.hidden{display:none;}
.tab-content {
  color: #888;
}
.item-info {
  display: flex;
  font-size: 16px;
  color: #888;
  padding: 12px 8px 12px 12px;
}
.item-info-desc {
  color: #444;
  flex: 1;
}
.item-info-content {
  flex: 3;
}
