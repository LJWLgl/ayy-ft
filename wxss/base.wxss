.ayy-list-view {
  width: 100%;
}
.ayy-list-item {
  display: flex;
  flex-flow: row nowrap;
  margin-top: 6px;
}
.ayy-list-view-image {
  flex: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.ayy-list-content {
  padding: 6px 0;
  flex: 3;
  flex-flow: column;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.ayy-list-image{
  width: 102px;
  height: 102px;
}

.ayy-list-price::before {
  content: "ï¿¥";
}
.ayy-list-content {
  display: flex;
  flex-flow: column;
}
.ayy-list-view-title {
  color: #444;
  font-size: 14px;
}
.ayy-list-view-address {
  color: #888;
  font-size: 10px;
}
.ayy-list-view-info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
}
.ayy-list-price {
  color: red;
  font-size: 14px;
  margin-right: 10px;
}
.ayy-list-look-count {
  color: #888;
  font-size: 11px;
  height: 22px;
  line-height: 22px;
}
.ayy-list-bottom-info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 4px;
}
.ayy-list-txt-detail {
  font-size: 10px;
  color: #888;
}
.ayy-tag-list {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}
.ayy-tag-item {
  display:inline;
  border: 1px solid #f4f142;
  color: #f4be41;
  font-size: 8px;
  border-radius: 4px;
}