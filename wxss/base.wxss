.ayy-list-view {
  width: 100%;
}
.ayy-list-item {
  display: flex;
  flex-flow: row nowrap;
  margin-top: 6px;
}
.ayy-list-view-image {
  flex: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.ayy-list-view-show {
  position: relative;  
}

.ayy-list-image-icon {
  position: absolute;
  left: 4px;
  top: 2px;
}

.ayy-list-content {
  padding: 6px 0;
  flex: 3;
  flex-flow: column;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.ayy-list-image{
  width: 102px;
  height: 102px;
}

.ayy-list-price::before {
  content: "ï¿¥";
}
.ayy-list-content {
  display: flex;
  flex-flow: column;
}
.ayy-list-view-title {
  color: #444;
  font-size: 14px;
}
.ayy-list-view-address {
  color: #888;
  font-size: 10px;
}
.ayy-list-view-info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
}
.ayy-list-price {
  color: red;
  font-size: 14px;
  margin-right: 10px;
}
.ayy-list-look-count {
  color: #888;
  font-size: 11px;
  height: 22px;
  line-height: 22px;
}
.ayy-list-bottom-info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 4px;
}
.ayy-list-txt-detail {
  font-size: 10px;
  color: #888;
}
.ayy-tag-list {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}
.ayy-tag-item {
  display:inline;
  border: 1px solid #f4f142;
  color: #f4be41;
  font-size: 8px;
  border-radius: 4px;
}
.ayy-icon-donation {
  padding: 2px 3px;
  display:inline;
  color: #fff;
  background-color: #f44277;
  font-size: 10px;
  border-radius: 50%;
}
.talk-list-view {
  width: 100%;
  margin-bottom: 8px;
  box-sizing: border-box;  
}
.talk-item-content {
  padding: 26px 20px 10px 22px;
}
.flex-row {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.talk-item-bottom {
  color: #888;
  font-size: 12px;
  line-height: 16px;  
}
.talk-list-item {
  box-sizing: border-box;  
}
.talk-item-desc {
  font-size: 14px;
  color: #444;
  margin-bottom: 16px;
  line-height: 16px;
}
.talk-item-count {
  width: 30%;
  display: flex;
  flex-flow: row nowrap;
}
.talk-item-look-count {
  flex: 1;
  justify-content: flex-start;
  margin-right: 10px;
}
.talk-item-comment-count {
  flex: 1;
  justify-content: flex-start;
}
.talk-item-interval {
  width: 100%;
  height: 6px;
  background-color: #eee;
}
.small-icon {
  margin-right: 2px;
}
.icon-picture  {
  line-height: 16px;
  font-size: 16px;
}

.listcomment-area {
  width: 100%;
  padding-left: 12px;
}
.listcomment-area-item {
  border-bottom: 1px solid #eee;
  padding: 16rpx 0px;
}
.listcomment-arem-item-base {
  display: flex;
  flex-flow: row nowrap;
}
.listcomment-item-avatar {
  margin-right: 12rpx;
}
.listcomment-item-avatar-image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 4px;
}
.listcomment-item-comment-info {
  display: flex;
  flex-flow: column;
  color: #444;
}
.listcomment-username {
  font-size: 14px;
  color: #707885;
}
.listcomment-desc {
  font-size: 16px;
  padding: 4px 0 4px 0;
  color: #444;
}
.listcomment-item-date {
  color: #888;
  font-size: 12px;
}