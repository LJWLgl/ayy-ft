/**app.wxss**/
@import 'wxss/weui.wxss';
@import 'wxss/iconfont.wxss';
@import 'wxss/base.wxss';
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; 
  padding: 0 0;   
  box-sizing: border-box; 
}
.top {
  width: 100%;
}
.middle {
  width: 100%;
  box-sizing: border-box;
}
.bottom {
  width: 100%;
  box-sizing: border-box;
}

.btn-container {
  position: fixed;
  bottom: 0px;
  left: 0px;
}

.hide {
  display: none;
}

.show {
  display: flex;
}


